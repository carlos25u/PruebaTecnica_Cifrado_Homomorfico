<Window x:Class="PruebaTecnica_Cifrado_Homomorfico.UI.Consultas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PruebaTecnica_Cifrado_Homomorfico.UI"
        mc:Ignorable="d"
        Title="Consultas de clientes" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">

            <Button x:Name="buscar" Content=" Buscar " HorizontalAlignment="Left" Width="100" Height="30" Click="buscar_Click"></Button>

            <StackPanel HorizontalAlignment="Left" Margin="0,5,0,0">
                <DataGrid x:Name="DatosDataGrid" Height="300" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="50" Header="Id" Binding="{Binding IdCliente}" IsReadOnly="True"/>
                        <DataGridTextColumn Width="100" Header="Cedula" Binding="{Binding CedulaSerial}" IsReadOnly="True"/>
                        <DataGridTextColumn Width="100" Header="Nombres" Binding="{Binding Nombres}" IsReadOnly="True"/>
                        <DataGridTextColumn Width="100" Header="Direccion" Binding="{Binding Direccion}" IsReadOnly="True"/>
                        <DataGridTextColumn Width="100" Header="Telefono" Binding="{Binding Telefono}" IsReadOnly="True"/>
                        <DataGridTextColumn Width="100" Header="Limite de credito" Binding="{Binding LimiteCredito}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
